    <!-- Style for LnlFiltro -->
    <style name="LnlFiltro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for Input Filtro -->
    <style name="EdtFiltro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:hint">@string/hint_filtro</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
    </style>

    <!-- Style for ListView -->
    <style name="LstView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>

