    <!-- Style for EdtForm -->
    <style name="EdtForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
        <item name="colorControlNormal">#0099FF</item>
        <item name="colorControlActivated">#0099FF</item>
        <item name="colorControlHighlight">#0099FF</item>
    </style>

    <!-- Style for LnlItemLista -->
    <style name="LnlItemLista">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!-- Style for IconItemLista -->
    <style name="IconItemLista">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <!-- Style for ItemLista -->
    <style name="ItemLista">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
