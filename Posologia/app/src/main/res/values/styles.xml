<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">#2196F3</item>
        <!-- The UI controls like checkboxes and text fields -->
        <item name="colorAccent">#CFD8DC</item>
        <!-- App color to navigation bar -->
        <item name="android:navigationBarColor">#2196F3</item>

    </style>

    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <!--item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item-->

        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:textColor">@android:color/background_dark</item>

        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorAccent">#CFD8DC</item>

        <item name="android:navigationBarColor">#2196F3</item>

    </style>

    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


